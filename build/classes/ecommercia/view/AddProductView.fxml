<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/21.0.5" alignment="CENTER" spacing="15" prefWidth="400" prefHeight="300"
      fx:controller="ecommercia.controller.AddProductController">
    <children>
        <!-- Title -->
        <Label text="Add New Product" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- Name Field -->
        <HBox spacing="10">
            <Label text="Name:" />
            <TextField fx:id="nameField" promptText="Enter product name" />
        </HBox>

        <!-- Price Field -->
        <HBox spacing="10">
            <Label text="Price:" />
            <TextField fx:id="priceField" promptText="Enter product price" />
        </HBox>

        <!-- Category Field -->
        <HBox spacing="10">
            <Label text="Category:" />
            <TextField fx:id="categoryField" promptText="Enter product category" />
        </HBox>

        <!-- Stock Field -->
        <HBox spacing="10">
            <Label text="Stock:" />
            <TextField fx:id="stockField" promptText="Enter stock quantity" />
        </HBox>

        <!-- Buttons -->
        <HBox spacing="20" alignment="CENTER">
            <Button text="Add" onAction="#handleAdd" />
            <Button text="Cancel" onAction="#handleCancel" />
        </HBox>
    </children>
</VBox>
