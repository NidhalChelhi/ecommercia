<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="20" prefWidth="500" prefHeight="400"
      fx:controller="ecommercia.controller.AddProductController" stylesheets="/resources/styles/addproduct.css" id="container">
    <children>
        <!-- Title -->
        <Label text="Add New Product" id="add-product-title" />

        <!-- Form Section -->
        <VBox spacing="15" id="form-section">
            <!-- Name Field -->
            <HBox spacing="10" id="form-field">
                <Label text="Name:" id="form-label" />
                <TextField fx:id="nameField" promptText="Enter product name" id="form-input" />
            </HBox>

            <!-- Price Field -->
            <HBox spacing="10" id="form-field">
                <Label text="Price:" id="form-label" />
                <TextField fx:id="priceField" promptText="Enter product price" id="form-input" />
            </HBox>

            <!-- Category Field -->
            <HBox spacing="10" id="form-field">
                <Label text="Category:" id="form-label" />
                <ComboBox fx:id="categoryComboBox" promptText="Select category" id="form-input" />
            </HBox>

            <!-- Stock Field -->
            <HBox spacing="10" id="form-field">
                <Label text="Stock:" id="form-label" />
                <TextField fx:id="stockField" promptText="Enter stock quantity" id="form-input" />
            </HBox>
        </VBox>

        <!-- Buttons -->
        <HBox spacing="20" alignment="CENTER" id="action-buttons">
            <Button text="Add" onAction="#handleAdd" id="add-button" />
            <Button text="Cancel" onAction="#handleCancel" id="cancel-button" />
        </HBox>
    </children>
</VBox>
