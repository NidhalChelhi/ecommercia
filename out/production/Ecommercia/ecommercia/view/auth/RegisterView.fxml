<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21.0.5"
            fx:controller="ecommercia.controller.auth.RegisterController"
            stylesheets="/resources/styles/auth.css">

    <children>
        <VBox id="auth-page">
            <VBox id="welcome-section">
                <ImageView fx:id="logoImageView" fitHeight="150" fitWidth="150">
                    <image>
                        <Image url="@/resources/images/logo.png"/>
                    </image>
                </ImageView>
                <Label text="Welcome to Ecommercia" id="welcome-title"/>
                <Label text="Create an account to get started" id="welcome-subtitle"/>
            </VBox>

            <VBox id="form-container">
                <Label text="Create a New Account" id="form-title"/>
                <TextField fx:id="fullnameField" promptText="Enter your full name" id="input-field"/>
                <TextField fx:id="emailField" promptText="Enter your email" id="input-field"/>
                <PasswordField fx:id="passwordField" promptText="Enter your password" id="input-field"/>
                <ImageView fx:id="avatarImageView" fitWidth="100" fitHeight="100" id="avatar-preview"/>
                <Button text="Upload Avatar" fx:id="uploadAvatarButton" onAction="#handleUploadAvatar"
                        id="upload-avatar-button">
                    <graphic>
                        <ImageView fitWidth="20" fitHeight="20">
                            <image>
                                <Image url="@/resources/images/icons/upload-image-icon.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button text="Register" fx:id="registerButton" onAction="#handleRegister" id="action-button"/>
                <HBox id="link-section">
                    <Label text="Already have an account?"/>
                    <Hyperlink text="Login" onAction="#handleLogin" id="link"/>
                </HBox>
                <Label fx:id="errorLabel" text="" id="error-message"/>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
